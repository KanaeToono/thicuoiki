<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="100dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/background_item_rss_pager"
        android:background="#33111111"
        android:weightSum="6"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="5"
            android:weightSum="6"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <FrameLayout
                android:paddingLeft="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:src="@drawable/imagenotfound"
                    android:id="@+id/imageView_title_icon"
                    android:layout_width="80dp"
                    android:layout_height="71dp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:weightSum="5">

                <TextView
                    android:id="@+id/textView_title_news"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView_title_icon"
                    android:layout_weight="2"
                    android:textColor="#111111"
                    android:textSize="15sp" />

                <TextView
                    android:textColor="#8C111111"
                    android:id="@+id/textViewPubdate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp" />
                <!--<ImageView-->
                <!--android:src="@drawable/ic_file_download_black_24dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:id="@+id/imageView_download"/>-->
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:background="#A6FFFFFF"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <!--<ImageView-->
            <!--android:layout_gravity="bottom|right|end"-->
            <!--android:src="@drawable/ic_more_vert_black_24dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/imageView_choose"/>-->
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginLeft="280dp"
                    android:layout_weight="1"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/ic_file_download_black_24dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView_download"/>
                <!--<ImageView-->
                    <!--android:layout_marginTop="2dp"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:src="@drawable/star_on"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:id="@+id/imageView_like"/>-->
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>